{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
  ],
  "include": [
    "./src"
  ],
  "paths": {
    "@components/*": [
      "./components/*"
    ],
    "@context/*": [
      "./context/*"
    ],
    "@api/*": [
      "./api/*"
    ],
    "@types/*": [
      "./types/*"
    ],
    "@utils/*": [
      "./utils/*"
    ],
    "@themes": [
      "./themes"
    ]
  },
}