generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ContentList {
  id                 Int           @id @default(autoincrement())
  name               String
  type               String
  content_status     Int
  global_rating      Float         @default(0)
  personal_rating    Float?        @default(0)
  genres             String
  images             String
  creation_timestamp DateTime      @default(now())
  ContentStatus      ContentStatus @relation(fields: [content_status], references: [id])
}

model ContentStatus {
  id                 Int           @id @default(autoincrement())
  status             String
  creation_timestamp DateTime      @default(now())
  ContentList        ContentList[]
}

model Genres {
  id   Int    @id
  name String
}

model ContentType {
  id   Int    @id
  name String
}
